  <div class="col-xs-8">
  <label>Movie Name</label>
  <input type="text" class="form-control input-sm" name="moviename" required="true">
  </div>
  </div>
 
 <div class="form-group">
 <div class="col-xs-8">
  <label>Movie Banner</label>
