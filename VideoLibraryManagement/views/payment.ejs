<h3><center>Credit Card Payment</center></h3>
    
    <!-- credit card payment -->
	<hr>
	<div class="col-sm-3 col-sm-offset-3">
	<% if (typeof amount != 'undefined') { %>
<h3><center><span class="label label-success">Total Amount: $<%=amount%></span></center></h3>
<% } %>
	<form action="/creditcard" method="post">
		<div class="form-group">
			<label>Card Type</label>
			<select class="form-control" name="cardtype">
			<option value="master">Master</option>
			<option value="premium">Visa</option>
			</select>
		</div>
		<div class="form-group">
			<label>Name on the Card</label>
			<input type="text" class="form-control" name="name" required="true">
		</div>
		<div class="form-group">
		<label>Card Expiry</label>
			<label>Month</label>
			<select class="class="col-xs-8" name="month">
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
			<option value="4">4</option>
			<option value="5">5</option>
			<option value="6">6</option>
			<option value="7">7</option>
			<option value="8">8</option>
			<option value="9">9</option>
			<option value="10">10</option>
			<option value="11">11</option>
			<option value="12">12</option>	
			</select>
			
			<label>Year</label>
			<select class="class="col-xs-8" name="month">
			<option value="2014">2014</option>
			<option value="2015">2015</option>
			<option value="2016">2016</option>
			<option value="2017">2017</option>
			<option value="2018">2018</option>
			<option value="2019">2019</option>
			<option value="2020">2020</option>
			</select>
			
			
			
		</div>
		<div class="form-group">
			<label>Card Number</label>
			<input type="text" class="form-control" name="cardno" required="true">
		</div>
		<div class="form-group">
			<label>CVV</label>
			<input type="text" class="form-control" name="cvv" required="true">
		</div>

		<button type="submit" class="btn btn-info btn-sm">Confirm</button>
		
	</form>
	</div>
  </div>
  </body>
